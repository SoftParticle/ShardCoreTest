
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <table id="products" class="table table-striped table-bordered dt-responsive nowrap products-table">
                    <thead>
                        <tr>
                            <th class="id-column">Id</th>
                            <th>Model</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th class="button-column">Edit</th>
                            <th class="button-column">Delete</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <h3>Move to Shard</h3>
            <form asp-controller="Home" asp-action="MoveToShard" method="post">
                <div class="form-group">
                    <label>ProductId</label>
                    <input type="text" class="form-control" id="productId" name="productId" placeholder="Enter ProductId">
                    <label>Shard Id Prefix</label>
                    <input type="text" class="form-control" id="shardIdPrefix" name="shardIdPrefix" placeholder="Enter Shard id Prefix">
                    <small id="emailHelp" class="form-text text-muted">Check if product id has changed to reflect the new shard.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(initProductsDataTable());
    </script>
}
